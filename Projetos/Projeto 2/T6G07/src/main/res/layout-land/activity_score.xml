<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feup.nuno.asteroidsandroid.Score_Activity"
    android:background="@drawable/menu2">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/Menu_btn"
        android:background="@drawable/btn_home_selector"
        android:maxHeight="75dp"
        android:minHeight="75dp"
        android:textSize="24dp"
        android:layout_marginRight="55dp"
        android:layout_below="@+id/HighScore_estatico"
        android:layout_alignRight="@+id/GAMEOVER"
        android:layout_alignEnd="@+id/GAMEOVER"
        android:layout_marginTop="-20dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_resumir"
        android:background="@drawable/btn_novamente_selector"
        android:layout_alignLeft="@+id/Menu_btn"
        android:layout_alignStart="@+id/Menu_btn"
        android:layout_below="@+id/Menu_btn"
        android:layout_marginTop="15dp"/>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="255dp"
        android:background="@drawable/quadrado_cantos_redondos"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btn_resumir"
        android:layout_marginBottom="10dp"
        >
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HighScore_textview"
        android:layout_below="@+id/HighScore_estatico"
        android:layout_alignLeft="@+id/HighScore_estatico"
        android:layout_alignStart="@+id/HighScore_estatico"
        android:layout_alignRight="@+id/HighScore_estatico"
        android:layout_alignEnd="@+id/HighScore_estatico"
        android:text="0"
        android:textIsSelectable="false"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#282828"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:id="@+id/Score_estatico"
        android:layout_below="@+id/HighScore_textview"
        android:layout_alignLeft="@+id/HighScore_textview"
        android:layout_alignStart="@+id/HighScore_textview"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="45dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignRight="@+id/HighScore_textview"
        android:layout_alignEnd="@+id/HighScore_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/Score_textView"
        android:layout_below="@+id/Score_estatico"
        android:layout_alignLeft="@+id/Score_estatico"
        android:layout_alignStart="@+id/Score_estatico"
        android:layout_alignRight="@+id/Score_estatico"
        android:layout_alignEnd="@+id/Score_estatico"
        android:textAlignment="center"
        android:textColor="#282828"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HIGHSCORE"
        android:id="@+id/HighScore_estatico"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME OVER"
        android:id="@+id/GAMEOVER"
        android:layout_alignParentTop="true"
        android:textSize="47dp"
        android:textColor="#c8c8c8"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"/>


</RelativeLayout>
