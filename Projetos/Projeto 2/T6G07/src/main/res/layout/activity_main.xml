<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feup.nuno.asteroidsandroid.MainActivity"
    android:background="@drawable/menu1">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text=""
        android:id="@+id/Jogar_btn"
        android:nestedScrollingEnabled="false"
        android:maxHeight="75dp"
        android:minHeight="75dp"
        android:textSize="24dp"
        android:background="@drawable/btn_jogar_fundo_selector"
        android:layout_above="@+id/Ajuda_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"/>

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text=""
        android:id="@+id/Ajuda_btn"
        android:minHeight="75dp"
        android:maxHeight="75dp"
        android:textSize="15dp"
        android:background="@drawable/btn_ajuda_selector"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text=""
        android:id="@+id/Som_btn"
        android:layout_alignTop="@+id/Ajuda_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asteroids"
        android:id="@+id/textView5"
        android:layout_marginBottom="80dp"
        android:textIsSelectable="false"
        android:textSize="50dp"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:layout_above="@+id/Jogar_btn"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
