<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feup.nuno.asteroidsandroid.Score_Activity"
    android:background="@drawable/menu2">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/quadrado_cantos_redondos"
        android:clickable="false"
        android:translationZ="-1dp"
        android:layout_alignTop="@+id/HighScore_estatico"
        android:layout_alignLeft="@+id/HighScore_textview"
        android:layout_alignStart="@+id/HighScore_textview"
        android:layout_marginLeft="-32dp"
        android:layout_marginTop="-30dp">
    </FrameLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text=""
        android:id="@+id/Menu_btn"
        android:background="@drawable/btn_home_selector"
        android:maxHeight="75dp"
        android:minHeight="75dp"
        android:textSize="24dp"
        android:layout_marginRight="87dp"
        android:layout_marginEnd="87dp"
        android:layout_alignTop="@+id/btn_resumir"
        android:layout_alignRight="@+id/GAMEOVER"
        android:layout_alignEnd="@+id/GAMEOVER"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btn_resumir"
        android:background="@drawable/btn_novamente_selector"
        android:layout_alignBottom="@+id/Score_estatico"
        android:layout_toRightOf="@+id/Menu_btn"
        android:layout_toEndOf="@+id/Menu_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HighScore_textview"
        android:layout_below="@+id/HighScore_estatico"
        android:layout_alignLeft="@+id/HighScore_estatico"
        android:layout_alignStart="@+id/HighScore_estatico"
        android:layout_alignRight="@+id/HighScore_estatico"
        android:layout_alignEnd="@+id/HighScore_estatico"
        android:text="0"
        android:textIsSelectable="false"
        android:textSize="37dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#282828"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:id="@+id/Score_estatico"
        android:layout_below="@+id/HighScore_textview"
        android:layout_alignLeft="@+id/HighScore_textview"
        android:layout_alignStart="@+id/HighScore_textview"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="55dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignRight="@+id/HighScore_textview"
        android:layout_alignEnd="@+id/HighScore_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/Score_textView"
        android:layout_below="@+id/Score_estatico"
        android:layout_alignLeft="@+id/Score_estatico"
        android:layout_alignStart="@+id/Score_estatico"
        android:layout_alignRight="@+id/Score_estatico"
        android:layout_alignEnd="@+id/Score_estatico"
        android:textAlignment="center"
        android:textColor="#282828"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HIGHSCORE"
        android:id="@+id/HighScore_estatico"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/GAMEOVER"
        android:layout_toStartOf="@+id/GAMEOVER"
        android:layout_marginRight="-130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME OVER"
        android:id="@+id/GAMEOVER"
        android:textSize="100dp"
        android:textColor="#c8c8c8"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
